# =============================================================================
# MEC Service Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_DB=mec
POSTGRES_USER=mec
POSTGRES_PASSWORD=change_me_in_production
DB_PORT=5432

# Connection string (for application)
DATABASE_URL=postgresql://mec:change_me_in_production@localhost:5432/mec

# -----------------------------------------------------------------------------
# Redis (for caching)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=MEC Service
APP_VERSION=3.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8005

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET=change_me_generate_a_real_secret_at_least_32_chars

# -----------------------------------------------------------------------------
# External Services (optional)
# -----------------------------------------------------------------------------
# Stripe
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Auth0
# AUTH0_DOMAIN=your-tenant.auth0.com
# AUTH0_CLIENT_ID=...
# AUTH0_CLIENT_SECRET=...

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_CACHE=true
ENABLE_AUDIT_LOG=true
ENABLE_DECISION_LOG=true

# Cache TTL in seconds
CONTROL_CHECK_CACHE_TTL=60

# -----------------------------------------------------------------------------
# PostgREST (if using hybrid approach)
# -----------------------------------------------------------------------------
# PGRST_DB_URI=postgresql://authenticator:password@db:5432/mec
# PGRST_DB_SCHEMAS=api
# PGRST_DB_ANON_ROLE=mec_anon
# PGRST_JWT_SECRET=${JWT_SECRET}
