# =============================================================================
# MEC Service Environment Configuration (Hybrid Architecture)
# =============================================================================
# Copy this file to .env and update values for your environment

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_DB=mec
POSTGRES_USER=mec
POSTGRES_PASSWORD=change_me_in_production
DB_PORT=5432

# PostgREST authenticator role password (must match security.sql)
AUTHENTICATOR_PASSWORD=change_me_in_production

# Connection string (for FastAPI)
DATABASE_URL=postgresql+asyncpg://mec:change_me_in_production@db:5432/mec

# -----------------------------------------------------------------------------
# Redis (for caching)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# API Gateway
# -----------------------------------------------------------------------------
GATEWAY_PORT=8000

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
# MUST be at least 32 characters for PostgREST
JWT_SECRET=change_me_generate_a_real_secret_at_least_32_chars_long

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# Stripe (for subscription webhooks)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Auth0 (for user sync)
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_CACHE=true
ENABLE_AUDIT_LOG=true
